---
import Heading from "../components/Heading.astro";
import { Image } from "astro:assets";
import Star from "../assets/Star.svg";
---

<div class="grid gap-4 sm:gap-6">
  <!-- Web Development -->
  <article class="bg-bg1 rounded-lg p-4 sm:p-6">
    <div
      class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-4 pb-4 border-b border-text-white"
    >
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 bg-accent_blue rounded-full flex-shrink-0"></div>
        <Heading
          htmlheading="h2"
          type="div_heading"
          font="display2"
          stylingclasses="text-text-white text-base sm:text-lg"
        >
          Frontend Udvikling
        </Heading>
      </div>
      <div class="flex gap-1 justify-start sm:justify-end">
        {
          Array.from({ length: 5 }).map((_, i) => (
            <Image
              src={Star}
              alt="star"
              width="16"
              height="16"
              class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0"
            />
          ))
        }
      </div>
    </div>
    <ul class="text-text-white text-sm sm:text-base space-y-2">
      <li>HTML, CSS, JavaScript</li>
      <li>Astro, Tailwind, Alpine.js</li>
      <li>VS Code</li>
    </ul>
  </article>

  <!-- Repeat same structure for other skill items -->
