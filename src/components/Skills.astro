---
import Heading from "../components/Heading.astro";
import { Image } from "astro:assets";
import Blue from "../assets/Star_blue.svg";
import Green from "../assets/Star_green.svg";
import Yellow from "../assets/Star_yellow.svg";
import Red from "../assets/Star_red.svg";
---

<div class="grid gap-4 lg:gap-6 p-4 lg:p-8 mt-[5vw] mb-10 lg:mb-0">
  <Heading
    htmlheading="h2"
    type="section_heading"
    stylingclasses="text-text-white mb-4 px-4 lg:px-6"
  >
    Kvalifikationer
  </Heading>
  <!-- Web Development -->
  <article class="bg-bg1 rounded-lg px-4 lg:px-6">
    <div
      class="flex justify-between items-start lg:items-center mb-3 lg:mb-4 pb-3 lg:pb-4 border-b border-text-white"
    >
      <div class="flex items-center gap-3">
        <div class="w-2 h-2 lg:w-3 lg:h-3 bg-accent_blue rounded-full"></div>
        <Heading
          htmlheading="h2"
          type="list_heading"
          font="display2"
          stylingclasses="text-text-white"
        >
          Frontend Udvikling
        </Heading>
      </div>
      <div class="flex gap-1">
        {
          Array.from({ length: 5 }).map((_, i) => (
            <Image
              src={Blue}
              alt="star"
              width="16"
              height="16"
              class="w-4 h-4 lg:w-5 lg:h-5"
            />
          ))
        }
      </div>
    </div>
    <ul class="text-text-white text-sm lg:text-base space-y-1 lg:space-y-2">
      <li>Moderne webteknologier</li>
      <li>Performance optimering</li>
      <li>Responsivt design</li>
    </ul>
  </article>

  <!-- Design -->
  <article class="bg-bg1 rounded-lg px-4 lg:px-6">
    <div
      class="flex justify-between items-start lg:items-center mb-3 lg:mb-4 pb-3 lg:pb-4 border-b border-text-white"
    >
      <div class="flex items-center gap-3">
        <div class="w-2 h-2 lg:w-3 lg:h-3 bg-accent_yellow rounded-full"></div>
        <Heading
          htmlheading="h2"
          type="list_heading"
          font="display2"
          stylingclasses="text-text-white"
        >
          UX/UI Design
        </Heading>
      </div>
      <div class="flex gap-1">
        {
          Array.from({ length: 4 }).map((_, i) => (
            <Image
              src={Yellow}
              alt="star"
              width="16"
              height="16"
              class="w-4 h-4 lg:w-5 lg:h-5"
            />
          ))
        }
      </div>
    </div>
    <ul class="text-text-white text-sm lg:text-base space-y-1 lg:space-y-2">
      <li>Brugercentreret design</li>
      <li>Prototyping & wireframing</li>
      <li>Designsystemer</li>
    </ul>
  </article>

  <!-- Adobe -->
  <article class="bg-bg1 rounded-lg px-4 lg:px-6">
    <div
      class="flex justify-between items-start lg:items-center mb-3 lg:mb-4 pb-3 lg:pb-4 border-b border-text-white"
    >
      <div class="flex items-center gap-3">
        <div class="w-2 h-2 lg:w-3 lg:h-3 bg-accent_green rounded-full"></div>
        <Heading
          htmlheading="h2"
          type="list_heading"
          font="display2"
          stylingclasses="text-text-white"
        >
          Adobe Creative Cloud
        </Heading>
      </div>
      <div class="flex gap-1">
        {
          Array.from({ length: 3 }).map((_, i) => (
            <Image
              src={Green}
              alt="star"
              width="16"
              height="16"
              class="w-4 h-4 lg:w-5 lg:h-5"
            />
          ))
        }
      </div>
    </div>
    <ul class="text-text-white text-sm lg:text-base space-y-1 lg:space-y-2">
      <li>Grafisk design & illustration</li>
      <li>Foto- og videoredigering</li>
      <li>Motion graphics</li>
    </ul>
  </article>

  <!-- Music -->
  <article class="bg-bg1 rounded-lg px-4 lg:px-6">
    <div
      class="flex justify-between items-start lg:items-center mb-3 lg:mb-4 pb-3 lg:pb-4 border-b border-text-white"
    >
      <div class="flex items-center gap-3">
        <div class="w-2 h-2 lg:w-3 lg:h-3 bg-accent_red rounded-full"></div>
        <Heading
          htmlheading="h2"
          type="list_heading"
          font="display2"
          stylingclasses="text-text-white"
        >
          Lydproduktion
        </Heading>
      </div>
      <div class="flex gap-1">
        {
          Array.from({ length: 5 }).map((_, i) => (
            <Image
              src={Red}
              alt="star"
              width="16"
              height="16"
              class="w-4 h-4 lg:w-5 lg:h-5"
            />
          ))
        }
      </div>
    </div>
    <ul class="text-text-white text-sm lg:text-base space-y-1 lg:space-y-2">
      <li>Digital musikproduktion</li>
      <li>Lyddesign og mixing</li>
    </ul>
  </article>
</div>
