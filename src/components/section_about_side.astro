---
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "./Button.astro";
---

<div
  class="bg-bg2 lg:p-20 lg:col-start-1 lg:col-span-4 lg:row-start-1 flex flex-col justify-between"
>
  <Heading
    htmlheading="h2"
    type="div_heading"
    font="display2"
    stylingclasses="text-text-white"
    >"Digital design med fokus p√• UX, UI prototyping"</Heading
  >
  <!-- kontaktliste -->
  <div class="contactlist">
    <div class="flex flex-col gap-10 justify-between">
      <Button variant="privateMail" size="medium" />
      <Button variant="workMail" size="medium" />
      <Button variant="call" size="medium" />
      <Button variant="download" size="medium" />
    </div>
  </div>
</div>
