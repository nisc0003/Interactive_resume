---
// Henter parametrene fra Astro.props
const { teksttype = "brødtekst", stylingclasses = "" } = Astro.props;

// Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  // Use clamp to keep paragraph sizes stable across very large and small screens
  konsultativ:
    "text-[clamp(0.95rem,0.45vw,1.05rem)] md:text-[clamp(1rem,0.5vw,1.125rem)] italic font-sans",
  brødtekst:
    "text-[clamp(0.95rem,0.45vw,1.05rem)] md:text-[clamp(1rem,0.5vw,1.125rem)] my-4 font-sans font-normal text-pretty max-w-prose",
  stor: "text-lg my-4 font-sans font-normal max-w-prose",
  stor_fed: "text-lg my-4 font-sans font-semibold max-w-prose",
};
---

<p class:list={[sizeClasses[teksttype], stylingclasses]}><slot /></p>
