---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  type = "section_heading",
  font = "display1",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const typeClasses = {
  hero: "text-4xl md:text-5xl lg:text-[min(6.7vw,10rem)] uppercase font-extrabold",
  hero2: "text-2xl md:text-3xl lg:text-4xl uppercase font-semibold",
  section_heading: "text-2xl md:text-3xl lg:text-4xl uppercase font-bold",
  div_heading: "text-xl md:text-2xl lg:text-3xl  font-bold",
  list_heading:
    "text-sm md:text-base lg:text-lg uppercase font-semibold tracking-wide",
  card_heading: "text-base uppercase font-light text-wrap",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display1: "font-display1",
  display2: "font-display2",
};
---

<Htmlheading class:list={[stylingclasses, typeClasses[type], fontClasses[font]]}
  ><slot /></Htmlheading
>
