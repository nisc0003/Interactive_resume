---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  type = "section_heading",
  font = "display1",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const typeClasses = {
  // Use clamped sizes so headings don't grow/shrink excessively on very large or small screens
  hero: "text-4xl md:text-5xl lg:text-[clamp(2rem,3.8vw,6rem)] uppercase font-extrabold",
  hero2:
    "text-2xl md:text-3xl lg:text-[clamp(1.25rem,2.2vw,2.5rem)] uppercase font-semibold",
  section_heading:
    "text-2xl md:text-3xl lg:text-[clamp(1.25rem,2.2vw,2.5rem)] uppercase font-bold",
  div_heading:
    "text-xl md:text-2xl lg:text-[clamp(1rem,1.6vw,1.8rem)] font-bold",
  list_heading:
    "text-sm md:text-base lg:text-[clamp(0.9rem,1.2vw,1.125rem)] uppercase font-semibold tracking-wide",
  card_heading: "text-base uppercase font-light text-wrap",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display1: "font-display1",
  display2: "font-display2",
};
---

<Htmlheading class:list={[stylingclasses, typeClasses[type], fontClasses[font]]}
  ><slot /></Htmlheading
>
