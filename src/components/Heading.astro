---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  type = "section_heading",
  font = "display1",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const typeClasses = {
  hero: "text-5xl md:text-6xl lg:text-[min(6.7vw,10rem)] uppercase font-extrabold",
  hero2: "text-2xl  lg:text-[min(2vw,10rem)] uppercase font-extrabold ",
  section_heading: "text-3xl md:text-4xl lg:text-6xl uppercase font-bold",
  div_heading: "text-2xl md:text-3xl lg:text-5xl font-semibold",
  list_heading:
    "text-2xl md:text-3xl lg:text-4xl uppercase font-semibold italic",
  card_heading: "text-1xl md:text-2xl lg:text-2xl",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display1: "font-display1",
  display2: "font-display2",
};
---

<Htmlheading class:list={[stylingclasses, typeClasses[type], fontClasses[font]]}
  ><slot /></Htmlheading
>

<!-- her skal du lave alle typer headers, definerer farve, størrelse skrifttype osv. men hold også en åben så den kan styles individuelt -->
